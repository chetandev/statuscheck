var query string
var crit lambda
var window = 1m
var channel string
var webhook_url string
var vmname string
var tenantname string
var measurement string
var email string
var serverid string
var link string

batch
    |query(query)
        .period(window)
        .every(window)
    |alert()
        .id(vmname+'-'+tenantname)
        .stateChangesOnly()
        .crit(crit)
        .message('{{.Level}}|'+ vmname +'|'+tenantname+'|'+measurement+'|{{ index .Fields "mean"| printf "%0.2f"  }}|'+channel+'|'+webhook_url+'|'+email+'|'+serverid+'|'+link)
        .post()
                .endpoint('localhost')
                .captureResponse()
